{
    "name": "bluefission/opus",
    "type": "project",
    "description": "Opus - The Blue Fission Platform Framework.",
    "keywords": [
        "opus",
        "eidolon"
    ],
    "license": "Exclusive",
    "authors": [
        {
            "name": "Devon Scott",
            "email": "dscott@bluefission.com",
            "homepage": "http://bluefission.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/bluefission/develation"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bluefission/automata"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bluefission/bluecore"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bluefission/simpleclients"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bluefission/wise"
        },
        {
            "type": "vcs",
            "url": "https://github.com/bluefission/hestia-addon"
        }
    ],
    "require": {
        "php": "^8.0",
        "bluefission/automata": "dev-master",
        "bluefission/bluecore": "dev-main",
        "bluefission/develation": "^1.0.0-alpha",
        "bluefission/simpleclients": "dev-master",
        "bluefission/wise": "dev-main",
        "bluefission/hestia-addon": "dev-main",
        "botman/botman": "^2.6",
        "botman/driver-web": "^1.5",
        "cboden/ratchet": "^0.4.4",
        "fakerphp/faker": "^1.23",
        "genkovich/dialog-flow-bot-man-middleware": "^0.0.6",
        "illuminate/collections": "^10.3",
        "php-http/discovery": "^1.19",
        "sabberworm/php-css-parser": "^8.4",
        "symfony/cache": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "bluefission/bluecore": true,
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
